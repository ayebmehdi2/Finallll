<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#353333"
    android:layout_height="match_parent"
    tools:context=".PROFILE.ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="64dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:layout_width="match_parent"
                android:background="@color/darkPink"
                android:layout_height="139dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="130dp"/>


                <LinearLayout
                    android:orientation="vertical"
                    android:paddingBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:padding="8dp"
                            android:background="@drawable/circle_gra"
                            android:src="@drawable/person"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/nam"
                            android:layout_width="match_parent"
                            android:paddingLeft="16dp"
                            tools:text="------"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:padding="8dp"
                            android:background="@drawable/circle_gra"
                            android:src="@drawable/ic_email"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/emailee"
                            android:layout_width="match_parent"
                            android:paddingStart="16dp"
                            tools:text="-----"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:padding="8dp"
                            android:background="@drawable/circle_gra"
                            android:src="@drawable/loca"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/lo"
                            android:layout_width="match_parent"
                            android:paddingLeft="16dp"
                            tools:text="-----"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:padding="8dp"
                            android:background="@drawable/circle_gra"
                            android:src="@drawable/apple"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="16dp"
                            tools:text="----"
                            android:id="@+id/num"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btyy"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:padding="8dp"
                            android:background="@drawable/circle_gra"
                            android:src="@drawable/dam"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:id="@+id/blood_ty"
                            android:layout_width="40dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_marginStart="16sp"
                            android:padding="4dp"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:padding="8dp"
                            android:background="@drawable/circle_gra"
                            android:src="@drawable/ic_time"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/blood_ti"
                            android:layout_width="match_parent"
                            android:paddingStart="16dp"
                            android:text="-----"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@drawable/white"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="My diseases"
                            android:paddingTop="8dp"
                            android:layout_marginStart="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/darkPink"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/dis"
                            android:layout_width="match_parent"
                            tools:text="-----"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical"
                            android:textColor="#424242"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tof"
                android:layout_width="150dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                android:layout_height="150dp"
                android:background="@drawable/white"/>

            <ImageView
                android:layout_width="75dp"
                android:scaleType="centerCrop"
                android:layout_height="75dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/top_start_roze"/>
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/top_end_roze"/>
            <ImageView
                android:layout_width="75dp"
                android:scaleType="centerCrop"
                android:layout_height="75dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/button_start_noir"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/buttom_end_noir"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:layout_width="40dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:id="@+id/edit_profil"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_height="40dp"
            android:src="@drawable/setting"/>


        <ImageView
            android:id="@+id/back_prof"
            android:layout_width="50dp"
            android:src="@drawable/ic_back"
            android:padding="5dp"
            android:layout_height="50dp" />

    </RelativeLayout>


    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle_gra"
        android:layout_marginBottom="-30dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="32dp"
        android:layout_height="wrap_content">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:onClick="message"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_support"
            app:fabSize="mini"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:onClick="out"
            app:fabSize="mini"
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_logout"
            android:layout_height="wrap_content"  />
</LinearLayout>




    </RelativeLayout>
</layout>
