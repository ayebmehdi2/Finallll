<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/back"
    tools:context=".MESSAGING.CHATROOM.RoomChatActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/gra_shodow"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/back_chat"
                android:layout_width="50dp"
                android:src="@drawable/ic_back"
                android:padding="5dp"
                android:layout_height="match_parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="34dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="50dp"
                android:layout_height="34dp">
                <ImageView
                    android:id="@+id/ph"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/circle_white"
                    />
                <ImageView
                    android:layout_width="17dp"
                    android:scaleType="centerCrop"
                    android:layout_height="17dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/top_start_orange"/>
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/top_end_orange"/>
                <ImageView
                    android:layout_width="17dp"
                    android:scaleType="centerCrop"
                    android:layout_height="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/buttom_start_orange"/>
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/buttom_end_orange"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/namee"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="Kareem "
                android:layout_marginStart="100dp"
                android:textColor="#EEEEEE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="24dp"
                android:onClick="menu"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more"
                android:layout_height="30dp"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/rec_msg" />



        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shodow_gree_top"
            android:layout_height="55dp"
            >

            <ImageView
                android:id="@+id/pick_img"
                android:padding="8dp"
                android:src="@drawable/ic_image_black_24dp"
                android:layout_width="40dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/pick_location"
                android:padding="8dp"
                android:src="@drawable/ic_place"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <EditText
                android:hint="Sey somthing"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:id="@+id/edittext"
                android:background="#F5F5F5"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#424242"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/send"
                android:padding="8dp"
                android:src="@drawable/ic_send"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/menu"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="#212121"
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".5"/>

        <LinearLayout
            android:background="@drawable/white"
            android:layout_width="300dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <TextView
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#212121"
                android:id="@+id/del"
                android:text="Delete conversation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/grp"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="#212121"
                android:gravity="center_horizontal"
                android:text="Create group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/addone"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="#212121"
                android:text="Add anotherone"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>