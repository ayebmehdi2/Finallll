<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp">

    <RelativeLayout
        android:id="@+id/you"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="visible"
        android:background="@color/back"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="50dp"
            android:padding="5dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/userimg1"
                android:src="@drawable/person_coloree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/circle_white"
                />
            <ImageView
                android:layout_width="20dp"
                android:scaleType="centerCrop"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/top_start"/>
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/top_end"/>
            <ImageView
                android:layout_width="20dp"
                android:scaleType="centerCrop"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/buttom_start"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/button_end"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:visibility="visible"
                tools:text="lkrejfgiz lkvjz,orf "
                android:background="@drawable/circle_white"
                android:padding="10dp"
                android:textColor="#212121"
                android:textSize="16sp" />

            <ImageView
                android:layout_gravity="start"
                android:visibility="visible"
                android:id="@+id/cimage1"
                android:layout_marginTop="5dp"
                android:background="#EEEEEE"
                android:scaleType="centerCrop"
                android:layout_width="280dp"
                android:maxHeight="200dp"
                android:layout_height="280dp" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:id="@+id/location1"
                android:orientation="vertical"
                android:background="@drawable/circle_gra">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/loca"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:text="Open"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/me"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/back"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="50dp"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/userimg"
                android:src="@drawable/person_coloree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/circle_white"
                />
            <ImageView
                android:layout_width="20dp"
                android:scaleType="centerCrop"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/top_start"/>
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/top_end"/>
            <ImageView
                android:layout_width="20dp"
                android:scaleType="centerCrop"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/buttom_start"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/button_end"/>
        </androidx.constraintlayout.widget.ConstraintLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/msg"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:visibility="visible"
                tools:text="lkrejfgiz lkvjz,orf "
                android:background="@drawable/circle_gra"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:layout_gravity="end"
                android:visibility="visible"
                android:id="@+id/cimage"
                android:layout_marginTop="5dp"
                android:background="#EEEEEE"
                android:scaleType="centerCrop"
                android:layout_width="280dp"
                android:maxHeight="200dp"
                android:layout_height="280dp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:id="@+id/location"
                android:orientation="vertical"
                android:background="@drawable/circle_gra">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/loca"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:text="Open"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
