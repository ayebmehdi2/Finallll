<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<ScrollView



    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#960E7A"/>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="100dp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="16dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_signup"
                android:src="@drawable/ic_add_to_photos_black_24dp"
                android:scaleType="centerCrop"
                android:background="@drawable/white"
                />

            <ImageView
                android:layout_width="50dp"
                android:scaleType="centerCrop"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/top_start_roze"/>
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/top_end_roze"/>
            <ImageView
                android:layout_width="50dp"
                android:scaleType="centerCrop"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/buttom_start"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/button_end"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:paddingStart="100dp"
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:text="Create new account"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/info"
            android:layout_marginTop="190dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="50dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/person"
                    android:background="@drawable/radus_start"
                    android:layout_marginTop="19dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:padding="10dp"
                    android:id="@+id/emai"
                    android:src="@drawable/email"
                    android:background="@drawable/radus_start"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:src="@drawable/password"
                    android:padding="10dp"
                    android:background="@drawable/radus_start"
                    android:layout_marginTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/ic_confirme_pass"
                    android:background="@drawable/radus_start"
                    android:layout_marginTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/ic_phone"
                    android:background="@drawable/radus_start"
                    android:layout_marginTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/loca"
                    android:background="@drawable/radus_start"
                    android:layout_marginTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:padding="10dp"
                    android:id="@+id/bty"
                    android:src="@drawable/ic_blood"
                    android:background="@drawable/radus_start"
                    android:layout_marginTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/ic_time"
                    android:id="@+id/bti"
                    android:visibility="gone"
                    android:background="@drawable/radus_start"
                    android:layout_marginTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/diseases"
                    android:background="@drawable/radus_start"
                    android:layout_marginTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="Full name"
                    android:paddingStart="16sp"
                    android:id="@+id/name"
                    android:textSize="14sp"
                    android:background="@drawable/radus_end_white"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/email"
                    android:hint="Email"
                    android:textSize="14sp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/radus_end_white"
                    android:layout_height="45dp" />

                <EditText
                    android:hint="Password"
                    android:id="@+id/pass"
                    android:textSize="14sp"
                    android:paddingEnd="16sp"
                    android:inputType="textPassword"
                    android:paddingStart="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/radus_end_white"
                    android:layout_height="45dp" />

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/pass2"
                    android:hint="Confirme Password"
                    android:paddingStart="16sp"
                    android:paddingEnd="16sp"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/radus_end_white"
                    android:layout_height="45dp" />

                <EditText
                    android:id="@+id/phone"
                    android:hint="Phone number"
                    android:inputType="number"
                    android:paddingStart="16sp"
                    android:layout_marginTop="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/radus_end_white"
                    android:layout_height="45dp"
                    tools:ignore="TextFields" />
                <EditText
                    android:id="@+id/loca"
                    android:hint="Location"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:paddingEnd="16sp"
                    android:paddingStart="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/radus_end_white"
                    android:layout_height="45dp" />



                <Spinner
                    android:id="@+id/blood_type"
                    android:hint="Location"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:entries="@array/blood_type"
                    android:paddingEnd="16sp"
                    android:paddingStart="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/radus_end_white"
                    android:layout_height="45dp"
                    />

                <EditText
                    android:id="@+id/last_blood"
                    android:hint="Last time you donate blood"
                    android:inputType="date"
                    android:paddingStart="16sp"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:paddingEnd="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/radus_end_white"
                    android:layout_height="45dp" />

                <EditText
                    android:id="@+id/diseases"
                    android:hint="Diseases that you had before or still have"
                    android:inputType="text"
                    android:paddingStart="16sp"
                    android:textSize="14sp"
                    android:paddingEnd="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/radus_end_white"
                    android:layout_height="120dp" />


            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/sign_up"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_below="@+id/info"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/roze_button"
            android:text="Sign up"
            android:textColor="#FFF" />



    </RelativeLayout>

</ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/sure"
            android:visibility="gone"
            android:layout_height="match_parent">

            <View
                android:id="@+id/canc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#212121"
                android:alpha=".5"/>

            <LinearLayout
                android:background="@drawable/white"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20sp"
                    android:id="@+id/desc"
                    android:textColor="#212121"
                    android:layout_margin="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You sure to change your profil data "/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:gravity="center"
                        android:id="@+id/cancel"
                        android:textSize="20sp"
                        android:textColor="@color/darkPink"
                        android:textStyle="bold"/>

                    <TextView
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/ok"
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/darkPink"
                        android:layout_height="wrap_content"
                        android:text="Ok"/>


                    <TextView
                        android:id="@+id/yes"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="20sp"
                        android:textColor="@color/darkPink"
                        android:textStyle="bold"/>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>