<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/back"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/i"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle_gra"
            />
        <ImageView
            android:layout_width="25dp"
            android:scaleType="centerCrop"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/top_start"/>
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/top_end"/>
        <ImageView
            android:layout_width="25dp"
            android:scaleType="centerCrop"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/buttom_start"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/button_end"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="16sp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/n"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:text="Mehdi Elayeb"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#707070"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/bl_tyyy"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="80dp"
        android:id="@+id/add_p"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="84dp"
            android:padding="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_person_add"
            android:background="@drawable/circle_gra"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:id="@+id/msg_p"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="84dp"
            android:padding="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_support"
            android:background="@drawable/circle_gra"
            />

    </RelativeLayout>




</LinearLayout>